<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="@drawable/bg_floating_ayah_options"
    android:gravity="center_horizontal"
    android:elevation="14dp"
    android:minHeight="120dp"
    android:padding="18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="260dp"
    android:id="@+id/floatingOptionsBar">
    <ScrollView 
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        android:maxHeight="100dp"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <TextView 
            android:gravity="center"
            android:background="@drawable/bg_ayah_text"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#1a237e"
            android:lineSpacingExtra="5dp"
            android:id="@+id/ayahPreview"
            android:text="نص الآية هنا" />
    </ScrollView>
    <LinearLayout 
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout 
            android:layout_marginEnd="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton 
                android:src="@drawable/ic_close"
                android:contentDescription="إغلاق"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:elevation="2dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#e53935"
                android:id="@+id/btnClose" />
        </FrameLayout>
        <FrameLayout 
            android:layout_marginEnd="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton 
                android:src="@drawable/ic_copy"
                android:contentDescription="نسخ"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:elevation="2dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#7c4dff"
                android:id="@+id/btnCopyAyah" />
        </FrameLayout>
        <FrameLayout 
            android:layout_marginEnd="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton 
                android:src="@drawable/ic_share"
                android:contentDescription="مشاركة"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:elevation="2dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#fa9a14"
                android:id="@+id/btnShareAyah" />
        </FrameLayout>
        <FrameLayout 
            android:layout_marginEnd="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton 
                android:src="@drawable/ic_book"
                android:contentDescription="تفسير"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:elevation="2dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#22b573"
                android:id="@+id/btnTafsir" />
        </FrameLayout>
        <FrameLayout 
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageButton 
                android:src="@drawable/ic_play"
                android:contentDescription="تلاوة"
                android:scaleType="center"
                android:background="@drawable/bg_circle_option_btn"
                android:elevation="2dp"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#317aff"
                android:id="@+id/btnPlayAyah" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
