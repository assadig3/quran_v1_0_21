<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingBottom="4dp"
        android:textColor="#27643B"
        android:id="@+id/tafsirAyahTitle"
        android:text="عنوان"
        android:textStyle="bold" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="6dp"
        android:textColor="#333"
        android:id="@+id/tafsirAyahText"
        android:text="نص الآية" />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingBottom="12dp"
        android:lineSpacingExtra="5dp"
        android:id="@+id/tafsirText"
        android:text="نص التفسير" />
    <Button 
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:id="@+id/btnCloseTafsir"
        android:text="إغلاق" />
    <Button 
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:id="@+id/btnShareTafsir"
        android:text="مشاركة التفسير" />
</LinearLayout>
