<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- خلفية بيضاء ناعمة -->
    <solid android:color="#EE03A9F4"/>

    <!-- حدود ذهبية رفيعة -->
    <stroke
        android:width="1dp"
        android:color="#D4AF37" /> <!-- لون ذهبي -->

    <!-- زوايا مستديرة -->
    <corners android:radius="16dp" />

    <!-- ظل داخلي ناعم (للتناسق مع الواجهة) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
